<?xml version="1.0" ?>
<project default="main">

    <target name="main" depends="compile, compress">
        <echo>
            Building the .jar file.
        </echo>
    </target>

    <target name="compile">
        <javac srcdir="./midiplayer"/>
    </target>

    <target name="compress">
        <jar jarfile="MajMidMak.jar" basedir="." includes="*.class" />
    </target>

    <target name="clean">
        <delete file="*.class"/>
        <delete file="MajMidMak.jar"/>
    </target>

</project>
